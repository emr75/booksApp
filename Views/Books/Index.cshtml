@model IEnumerable<booksApp.Models.Book>
@{
    ViewData["Title"] = "Books";
}

<h1>Books</h1>

<div>
    <a class="booksTable" asp-action="Create">Add a Book</a>
</div>

<table class="booksTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(m => item.Id)</td>
            <td>@Html.DisplayFor(m => item.Title)</td>
            <td>@Html.DisplayFor(m => item.FirstName)</td>
            <td>@Html.DisplayFor(m => item.MiddleName)</td>
            <td>@Html.DisplayFor(m => item.LastName)</td>
            <td></td>
        </tr>
        }
    </tbody>
</table>
